services:
  basket.api:
    build:
      context: D:\Repos\MerviMS
      dockerfile: Services/Basket/Basket.API/Dockerfile
    depends_on:
    - basket.data
    - rabbitmq
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_HTTPS_PORT: '44312'
      ASPNETCORE_URLS: https://+:443;http://+:80
      ConnectionString: basket.data
      EventBusConnection: rabbitmq
      EventBusPassword: guest
      EventBusUserName: guest
    image: basketapi
    ports:
    - published: 51361
      target: 80
    - published: 44312
      target: 443
    volumes:
    - C:\Users\leone\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\leone\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
  basket.data:
    image: redis:alpine
    ports:
    - published: 5673
      target: 5673
    - published: 15673
      target: 15673
  catalog.api:
    build:
      context: D:\Repos\MerviMS
      dockerfile: Services/Catalog/Catalog.Api/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_HTTPS_PORT: '44398'
      ASPNETCORE_URLS: https://+:443;http://+:80
    image: catalogapi
    ports:
    - published: 57793
      target: 80
    - published: 44398
      target: 443
    volumes:
    - C:\Users\leone\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\leone\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
  identity.api:
    build:
      context: D:\Repos\MerviMS
      dockerfile: Services/Identity/Identity.API/Dockerfile
    depends_on:
    - sql.data
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_HTTPS_PORT: '44371'
      ASPNETCORE_URLS: https://+:443;http://+:80
      ConnectionString: Server=sql.data;Database=mervi;User=sa;Password=Pass@word;
    image: identityapi
    ports:
    - published: 49901
      target: 80
    - published: 44371
      target: 443
    volumes:
    - C:\Users\leone\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\leone\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
  ordering.api:
    build:
      context: D:\Repos\MerviMS
      dockerfile: Services/Ordering/Ordering.API/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_HTTPS_PORT: '44320'
      ASPNETCORE_URLS: https://+:443;http://+:80
    image: orderingapi
    ports:
    - published: 52430
      target: 80
    - published: 44320
      target: 443
    volumes:
    - C:\Users\leone\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\leone\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
  provider.api:
    build:
      context: D:\Repos\MerviMS
      dockerfile: Services/Provider/Provider.API/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_HTTPS_PORT: '44333'
      ASPNETCORE_URLS: https://+:443;http://+:80
    image: providerapi
    ports:
    - published: 54472
      target: 80
    - published: 44333
      target: 443
    volumes:
    - C:\Users\leone\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\leone\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
  rabbitmq:
    image: rabbitmq:3-management-alpine
    ports:
    - published: 5672
      target: 5672
    - published: 15672
      target: 15672
  sql.data:
    environment:
      ACCEPT_EULA: "Y"
      SA_PASSWORD: Pass@word
    image: microsoft/mssql-server-linux:2017-latest
    ports:
    - published: 1433
      target: 1433
version: '3.4'